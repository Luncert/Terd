{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es2015",
        "esModuleInterop": true,
        "sourceMap": true,
        "strictNullChecks": false,
        "moduleResolution": "node",
        "pretty": true,
        "newLine": "LF",
        "allowSyntheticDefaultImports": true,
        "strict": true,
        "noUnusedLocals": false,
        "noUnusedParameters": false,
        "experimentalDecorators": true,
        "skipLibCheck": true,
    },
    "include": [
        "src"
    ],
    "exclude": [
        "node_modules"
    ]
}