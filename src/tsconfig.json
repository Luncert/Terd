{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2020",
    "rootDir": ".",
    "outDir": "../dist",
    "sourceMap": true,
    "strict": true,
    "esModuleInterop": true,
    "strictNullChecks": false,
    "moduleResolution": "node",
    "pretty": true,
    "newLine": "LF",
    "allowSyntheticDefaultImports": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "experimentalDecorators": true,
    "skipLibCheck": true,
    "resolveJsonModule": true
  },
  "include": [
    "../src"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "test",
  ]
}
